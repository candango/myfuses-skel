<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE myfuses PUBLIC "-//MYFUSES//DTD MYFUSES 1.0 Strict//EN"
    "http://www.candango.org/myfuses/dtd/myfuses.dtd">

<myfuses>
	<circuits>
		<circuit alias="pessoa" path="controle/pessoa" parent="" />
		<circuit alias="m_pessoa" path="modelo/pessoa" parent="" />
		<circuit alias="v_pessoa" path="visao/pessoa" parent="" />
		<circuit alias="m_uf" path="modelo/uf" parent="" />
	</circuits>
    
    
    <classes>
    </classes>
    
	<parameters>
        <parameter name="defaultFuseaction" value="pessoa.listar" />
        <!-- you may want to change this to development mode: -->
        <parameter name="mode" value="development" />
        <!-- change this to something more secure: -->
        <parameter name="password" value="skeleton" />
        <!--
            These are all default values that can be overridden:
        <parameter name="fuseactionVariable" value="fuseaction" />
        <parameter name="precedenceFormOrUrl" value="form" />
        <parameter name="scriptFileDelimiter" value="php" />
        <parameter name="maskedFileDelimiters" value="htm,cfm,cfml,php,php4,asp,aspx" />
        <paramater name="strictMode" value="false" />
        <parameter name="allowImplicitCircuits" value="false" />
        -->
        <parameter name="parseWithComments" value="false" />
        
        <parameter name="characterEncoding" value="iso-8859-1"/>
        
        <parameter name="debug" value="false"/>
        
        <parameter name="tools" value="false"/>
	</parameters> 

	<globalfuseactions>
		<preprocess>
		</preprocess>
		<postprocess>
		</postprocess>
	</globalfuseactions>
	
	<plugins>
		<phase name="preProcess">
		</phase>
		<phase name="preFuseaction">
		</phase>
		<phase name="postFuseaction">
		</phase>
		<phase name="fuseactionException">
		</phase>		
		<phase name="postProcess">
		</phase>
		<phase name="processError">
			
		</phase>
	</plugins>

</myfuses>
